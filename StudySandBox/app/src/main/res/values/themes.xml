<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudySandBox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Theme.StudySandBox.Button</item>
        <item name="android:textViewStyle">@style/Theme.StudySandBox.TextView</item>
    </style>


    <!-- Buttons -->
    <style name="Theme.StudySandBox.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">50sp</item>
        <item name="backgroundTint">#E41259</item>
        <item name="cornerRadius">200dp</item>>
        <item name="fontFamily">@font/brasblus</item>
    </style>

    <style name="Theme.StudySandBox.OvalButton" parent="Theme.StudySandBox.Button">
        <item name="android:background">@drawable/button_drawable</item>
    </style>

    <!-- TextView -->
    <style name="Theme.StudySandBox.TextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/purple_200</item>
        <item name="fontFamily">@font/BONEAPA</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.StudySandBox.ItalicTextView" parent="Theme.StudySandBox.TextView">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>